@using ShopClient.Models.ViewModels
@{
    ViewData["Title"] = "Create";
}
@model ShopClient.Models.ViewModels.PaymentMethodViewModel
<h1>Add Payment Method</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <h4>@ViewData["Title"]</h4>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CardNum"></label>
                    <input asp-for="CardNum" class="form-control" />
                    <span asp-validation-for="CardNum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default" formaction="/Wallet/AddPaymentMethodAsync">Add Card</button>
                </div>
            </form>
        </section>
    </div>
</div>